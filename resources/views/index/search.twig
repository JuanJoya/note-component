{% extends "layout.twig" %}

{% block title %}Search{% endblock %}
{% block content %}
<div class="container my-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ route('home') }}">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Search</li>
        </ol>
    </nav>
    <div class="alert alert-light text-center mb-4" role="alert">
        <h3 class="font-weight-light text-dark">Search notes</h3>
        <hr>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="alert alert-info mb-4" role="alert">
                <strong>Please</strong> type any word of title or content of a note.
            </div>
            <form id="search-form">
                <div class="input-group input-group-lg">
                    <div class="input-group-prepend">
                        <div class="input-group-text">
                            <i class="material-icons text-info">search</i>
                        </div>
                    </div>
                    <input type="text" id="search-input" class="form-control" placeholder="find" required>
                </div>
            </form>
        </div>
    </div>
    <div class="result" id="result">
    </div>
</div>
{% endblock %}
{% block js %}
<script src="{{ url('/static/js/search.js') }}"></script>
{% endblock %}