{% extends "layout.twig" %}

{% block title %}Update an Author{% endblock %}
{% block content %}
<div class="container my-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ route('home') }}">Home</a></li>
            <li class="breadcrumb-item"><a href="{{ route('authors.index') }}">Authors</a></li>
            <li class="breadcrumb-item active" aria-current="page">Update</li>
        </ol>
    </nav>
    <div class="alert alert-light text-center mb-4" role="alert">
        <h3 class="font-weight-light text-dark">Update an <span class="text-warning">Author</span></h3>
        <hr>
    </div>
    {# @var \Note\Domain\Author $author #}

    <div class="row">
        <div class="col-lg-12">
            {% if errors %}
                {% include 'partials/errors.twig' %}
            {% endif %}
            <div class="alert alert-warning" role="alert">
                <strong>Please</strong> update the form below.
            </div>
            <form action="{{ route('authors.update', {'author': author.id}) }}" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <label class="text-muted">User</label>
                    <input class="form-control" type="text" value="{{ author.user.fullName }}" readonly>
                </div>
                <div class="form-group">
                    <label class="text-muted">Author Identifier</label>
                    <input class="form-control" type="text" value="{{ author.id }}" readonly>
                </div>
                <div class="form-group">
                    <label class="text-muted">Username</label>
                    <input type="text" name="username" class="form-control" maxlength="20" value="{{ author.username }}" required>
                    <small class="form-text text-muted">Required, must be 5-20 characters long, only letters, numbers, dashes, underscores and spaces.</small>
                </div>
                <button type="submit" class="btn btn-warning btn-block">Save</button>
            </form>
        </div>
    </div>
</div>
{% endblock %}