{% extends "layout.twig" %}

{% block title %}Register{% endblock %}
{% block content %}
<div class="container my-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ route('home') }}">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Register</li>
        </ol>
    </nav>
    <div class="alert alert-light text-center mb-4" role="alert">
        <h3 class="font-weight-light text-dark">User Register</h3>
        <hr>
    </div>
    <div class="row justify-content-md-center">
        <div class="col-lg-8">
            {% if errors %}
                {% include 'partials/errors.twig' %}
            {% endif %}
            <form method="POST" class="mt-4 mb-5">
                <div class="form-group">
                    <label for="email" class="text-muted">Email</label>
                    <input type="email" class="form-control" maxlength="50" name="email" id="email" value="{{ email }}" required>
                    <small class="form-text text-muted">Required, must be a valid email address, 8-50 characters long.</small>
                </div>
                <div class="form-group">
                    <label for="password" class="text-muted">Password</label>
                    <input type="password" class="form-control" maxlength="25" name="password" id="password" required>
                    <small class="form-text text-muted">Required, must be 5-25 characters long.</small>
                </div>
                <div class="form-group">
                    <label for="password_confirm" class="text-muted">Confirm Password</label>
                    <input type="password" class="form-control" name="password_confirm" id="password_confirm" required>
                    <small class="form-text text-muted">Required.</small>
                </div>
                <input class="btn btn-primary btn-block" type="submit" value="Register">
            </form>
        </div>
    </div>
</div>
{% endblock %}