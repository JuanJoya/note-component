{% extends "layout.twig" %}

{% block title %}Login{% endblock %}
{% block content %}
<div class="container my-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ route('home') }}">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Login</li>
        </ol>
    </nav>
    <div class="alert alert-light text-center mb-4" role="alert">
        <h3 class="font-weight-light text-dark">User Login</h3>
        <hr>
    </div>
    <div class="row justify-content-md-center">
        <div class="col-lg-8">
            {% if errors %}
                {% include 'partials/errors.twig' %}
            {% endif %}
            <form method="POST" class="mt-4 mb-5">
                <div class="form-group">
                    <label for="email" class="text-muted">Email</label>
                    <input type="email" class="form-control" name="email" id="email" value="{{ email }}" required>
                </div>
                <div class="form-group">
                    <label for="password" class="text-muted">Password</label>
                    <input type="password" class="form-control" name="password" id="password" required>
                </div>
                {{ csrf_field()|raw }}
                <input class="btn btn-info btn-block" type="submit" value="Login">
            </form>
        </div>
    </div>
</div>
{% endblock %}